@page
@model StoreInventoryApp.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1 fw-bold">Overview</h2>
        <p class="text-muted">Welcome back! Here's what's happening in @Model.StoreName.</p>
    </div>
    <div>
        <a asp-page="/Sales/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> New Sale
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <!-- Total Products -->
    <div class="col-md-3">
        <div class="card h-100 stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="stat-label">Total Products</div>
                    <i class="bi bi-box-seam text-primary fs-4"></i>
                </div>
                <div class="stat-value">@Model.TotalProducts</div>
                <div class="text-muted small mt-2">In Catalog</div>
            </div>
        </div>
    </div>

    <!-- Low Stock -->
    <div class="col-md-3">
        <div class="card h-100 stat-card" style="border-left-color: #e53e3e;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="stat-label text-danger">Low Stock</div>
                    <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                </div>
                <div class="stat-value text-danger">@Model.LowStockCount</div>
                <div class="text-muted small mt-2">
                    <a asp-page="/Inventory/Index" class="text-danger text-decoration-none">Items need attention</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Customers -->
    <div class="col-md-3">
        <div class="card h-100 stat-card" style="border-left-color: #38a169;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="stat-label text-success">Customers</div>
                    <i class="bi bi-people text-success fs-4"></i>
                </div>
                <div class="stat-value">@Model.ActiveCustomers</div>
                <div class="text-muted small mt-2">
                    <a asp-page="/Customers/Index" class="text-success text-decoration-none">Active Profiles</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales Today -->
    <div class="col-md-3">
        <div class="card h-100 stat-card" style="border-left-color: #d69e2e;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="stat-label text-warning">Sales Today</div>
                    <i class="bi bi-currency-dollar text-warning fs-4"></i>
                </div>
                <div class="stat-value">@Model.DailySalesCount</div>
                <div class="text-muted small mt-2">
                    <a asp-page="/Sales/Index" class="text-warning text-decoration-none">Invoices Generated</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Activity -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Recent Activity</span>
                <a asp-page="/Sales/Index" class="btn btn-sm btn-outline-secondary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    No recent transactions found.
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-lightning-charge me-2"></i>Quick Actions
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="/Products/Create" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle me-2 text-primary"></i> Add Product
                </a>
                <a asp-page="/Inventory/Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-boxes me-2 text-success"></i> Check Stock
                </a>
                <a asp-page="/Customers/Create" class="list-group-item list-group-item-action">
                    <i class="bi bi-person-plus me-2 text-info"></i> New Customer
                </a>
                <a asp-page="/Reports/Inventory" class="list-group-item list-group-item-action">
                    <i class="bi bi-graph-up me-2 text-warning"></i> View Reports
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        border-radius: 10px;
        border-left: 4px solid #007bff;
        transition: transform 0.2s;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
    }
    
    .stat-label {
        font-size: 0.9rem;
        font-weight: 600;
        color: #6c757d;
    }
    
    .stat-value {
        font-size: 2rem;
        font-weight: 700;
    }
</style>