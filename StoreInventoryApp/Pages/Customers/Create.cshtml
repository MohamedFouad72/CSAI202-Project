@page
@model StoreInventoryApp.Pages.Customers.IndexModel
@using System.Data
@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Customer Profiles</h2>
        <p class="text-muted">Manage loyalty points and contact info.</p>
    </div>
    <a asp-page="./Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-2"></i> Add Customer
    </a>
</div>

<div class="row">
    @foreach (DataRow row in Model.CustomerList.Rows)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded-circle p-3 me-3 text-primary">
                                <i class="bi bi-person-fill fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">@row["FullName"]</h5>
                                <small class="text-muted">Since @Convert.ToDateTime(row["CreatedAt"]).ToString("MMM yyyy")</small>
                            </div>
                        </div>
                        <div class="text-end">
                            <h3 class="mb-0 text-warning fw-bold">@row["LoyaltyPoints"]</h3>
                            <small class="text-muted">Points</small>
                        </div>
                    </div>
                    <hr class="my-2" />
                    <div class="text-muted small">
                        <p class="mb-1"><i class="bi bi-telephone me-2"></i> @row["PhoneNumber"]</p>
                        <p class="mb-0"><i class="bi bi-geo-alt me-2"></i> @(row["Address"] == DBNull.Value ? "No Address" : row["Address"])</p>
                    </div>
                </div>

                <div class="card-footer bg-white border-top-0 d-flex gap-2">
                    <a asp-page="./Edit" asp-route-id="@row["CustomerID"]" class="btn btn-sm btn-outline-warning flex-grow-1">
                        <i class="bi bi-pencil"></i> Edit
                    </a>

                    <form method="post" asp-page-handler="Delete" asp-route-id="@row["CustomerID"]" class="flex-grow-1"
                          onsubmit="return confirm('Are you sure you want to delete this customer?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>