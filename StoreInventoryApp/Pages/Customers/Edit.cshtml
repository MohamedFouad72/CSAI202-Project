@page "{id:int}"
@model StoreInventoryApp.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Edit Customer</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Customer.CustomerID" />

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input asp-for="Customer.FullName" class="form-control" required />
                        <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="Customer.PhoneNumber" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea asp-for="Customer.Address" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-warning px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>