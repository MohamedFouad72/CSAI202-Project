@page
@model StoreInventoryApp.Pages.Settings.IndexModel
@{
    ViewData["Title"] = "System Settings";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0"><i class="bi bi-gear me-2"></i>System Settings</h4>
        </div>
        
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success">@Model.Message</div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
            
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Store Name</label>
                        <input type="text" class="form-control" asp-for="StoreName" required>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tax Rate (%)</label>
                        <input type="number" class="form-control" asp-for="TaxRate" step="0.01" min="0" required>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Currency Symbol</label>
                        <input type="text" class="form-control" asp-for="CurrencySymbol" maxlength="10" required>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Contact Email</label>
                        <input type="email" class="form-control" asp-for="ContactEmail">
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Contact Phone</label>
                        <input type="tel" class="form-control" asp-for="ContactPhone">
                    </div>
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-2"></i>Save Settings
                    </button>
                    <a asp-page="/Dashboard/Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>