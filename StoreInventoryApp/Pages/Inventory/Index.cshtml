@page
@model StoreInventoryApp.Pages.Inventory.IndexModel
@using System.Data
@{
    ViewData["Title"] = "Inventory Levels";
}

<!-- Anti-forgery token present so JS can read it -->
<form id="__antiForgeryForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Inventory Management</h2>
        <p class="text-muted">Real-time stock levels across warehouse and shelves.</p>
    </div>
    <div>
        <a asp-page="./PerformTransaction" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left-right me-1"></i> Transfer Stock
        </a>
        <a asp-page="./Transactions" class="btn btn-primary me-2">
            <i class="bi bi-list-check me-1"></i> View Transactions
        </a>
    </div>
</div>

<!-- TempData Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Product</th>
                        <th>Category</th>
                        <th>Store</th>
                        <th class="text-center">On Hand (Shelf)</th>
                        <th class="text-center">Stored (Warehouse)</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.InventoryList != null && Model.InventoryList.Rows.Count > 0)
                    {
                        @foreach (DataRow row in Model.InventoryList.Rows)
                        {
                            string status = row["StockStatus"].ToString();
                            string badgeClass = status == "OK" ? "bg-success" : (status == "Low" ? "bg-warning text-dark" : "bg-danger");

                            int quantityOnHand = Convert.ToInt32(row["QuantityOnHand"]);
                            int quantityStored = Convert.ToInt32(row["QuantityStored"]);
                            int total = quantityOnHand + quantityStored;

                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">@row["ProductName"]</div>
                                    <small class="text-muted">ID: @row["ProductID"]</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@row["CategoryName"]</span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@row["StoreName"]</span>
                                </td>
                                <td class="text-center">
                                    <span class="fw-bold">@quantityOnHand</span>
                                </td>
                                <td class="text-center">
                                    <span class="text-muted">@quantityStored</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@total</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @badgeClass rounded-pill">@status</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <!-- Edit button -->
                                        <a asp-page="./Edit"
                                           asp-route-productId="@row["ProductID"]"
                                           asp-route-storeId="@row["StoreID"]"
                                           class="btn btn-outline-primary"
                                           title="Edit quantities">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                                <h4 class="mt-3">No Inventory Found</h4>
                                <p class="text-muted">No inventory records available.</p>
                                <a asp-page="./PerformTransaction" class="btn btn-primary mt-2">
                                    <i class="bi bi-plus-circle me-2"></i>Add Inventory via Transfer
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Optional: Add a legend for status badges -->
<div class="mt-3">
    <div class="d-flex gap-3">
        <div>
            <span class="badge bg-success rounded-pill me-1">OK</span>
            <small class="text-muted">Above reorder level</small>
        </div>
        <div>
            <span class="badge bg-warning text-dark rounded-pill me-1">Low</span>
            <small class="text-muted">Near reorder level</small>
        </div>
        <div>
            <span class="badge bg-danger rounded-pill me-1">Critical</span>
            <small class="text-muted">At or below reorder level</small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // SweetAlert2 must be loaded globally (CDN or your bundle)
        document.querySelectorAll('.btn-delete-inv').forEach(btn => {
            btn.addEventListener('click', function () {
                const inventoryId = this.dataset.inventoryid;
                const productName = this.dataset.productname || 'this item';

                Swal.fire({
                    title: 'Are you sure?',
                    text: `Delete inventory for "${productName}"? This will permanently remove the inventory record.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // anti-forgery token input
                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        const form = document.createElement('form');
                        form.method = 'post';
                        // call Index handler = Delete
                        form.action = window.location.pathname + `?handler=Delete&InventoryID=${encodeURIComponent(inventoryId)}`;

                        if (tokenInput) {
                            const tokenField = document.createElement('input');
                            tokenField.type = 'hidden';
                            tokenField.name = '__RequestVerificationToken';
                            tokenField.value = tokenInput.value;
                            form.appendChild(tokenField);
                        }

                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });
    </script>
}
