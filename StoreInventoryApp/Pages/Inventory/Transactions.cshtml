@page
@model StoreInventoryApp.Pages.Inventory.TransactionsModel
@{
    ViewData["Title"] = "View Inventory Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Inventory Transactions</h2>
        <p class="text-muted">View all inventory movement history</p>
    </div>
    <div>
        <a asp-page="./PerformTransaction" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Transaction
        </a>
        <a asp-page="./Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left me-2"></i>Back to Inventory
        </a>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title fw-bold">Filter Transactions</h5>
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Product</label>
                <select asp-for="ProductFilter" class="form-select">
                    <option value="">All Products</option>
                    @if (Model.Products != null && Model.Products.Rows.Count > 0)
                    {
                        @foreach (System.Data.DataRow r in Model.Products.Rows)
                        {
                            <option value="@r["ProductID"]">@r["ProductName"]</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Transaction Type</label>
                <select asp-for="TypeFilter" class="form-select">
                    <option value="All">All Types</option>
                    <option value="Transfer">Transfer</option>
                    <option value="Sale">Sale</option>
                    <option value="Receipt">Receipt</option>
                    <option value="Return">Return</option>
                    <option value="Adjustment">Adjustment</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Date From</label>
                <input type="date" asp-for="DateFrom" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Date To</label>
                <input type="date" asp-for="DateTo" class="form-control" />
            </div>

            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Transactions != null && Model.Transactions.Rows.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Date & Time</th>
                            <th>Type</th>
                            <th>Product</th>
                            <th>Store</th>
                            <th>Quantity</th>
                            <th>Batch #</th>
                            <th>User</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.Transactions.Rows)
                        {
                            <tr>
                                <td class="fw-bold">@row["TransactionID"]</td>
                                <td>@Convert.ToDateTime(row["CreatedAt"]).ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    @{
                                        var type = row["TransactionType"].ToString();
                                        var badgeClass = type switch
                                        {
                                            "Transfer" => "bg-primary",
                                            "Sale" => "bg-success",
                                            "Receipt" => "bg-info",
                                            "Return" => "bg-warning",
                                            "Adjustment" => "bg-secondary",
                                            _ => "bg-dark"
                                        };
                                    }
                                    <span class="badge @badgeClass">@type</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@row["ProductName"]</div>
                                    <small class="text-muted">ID: @row["ProductID"]</small>
                                </td>
                                <td>@row["StoreName"]</td>
                                <td>
                                    <span class="badge bg-light text-dark fs-6">
                                        @row["Quantity"]
                                    </span>
                                </td>
                                <td>
                                    @if (row["BatchNumber"] != DBNull.Value)
                                    {
                                        <span class="badge bg-light text-dark">@row["BatchNumber"]</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@row["CreatedBy"]</td>
                                <td>
                                    @if (row["Notes"] != DBNull.Value && !string.IsNullOrEmpty(row["Notes"].ToString()))
                                    {
                                        <small>@row["Notes"]</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No notes</span>
                                    }
                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                                        <input type="hidden" name="id" value="@row["TransactionID"]" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted">
                    Showing @Model.Transactions.Rows.Count transaction(s)
                </div>
                <div>
                    <a href="@Url.Page("./Transactions")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Clear Filters
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">No Transactions Found</h4>
                <p class="text-muted">No inventory transactions match your filters.</p>
                <a href="@Url.Page("./Transactions")" class="btn btn-primary mt-2">
                    <i class="bi bi-arrow-clockwise me-2"></i>Clear Filters
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set today's date as default for Date To
            const dateToInput = document.querySelector('input[name="DateTo"]');
            if (dateToInput && !dateToInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dateToInput.value = today;
            }

            // Set 30 days ago as default for Date From
            const dateFromInput = document.querySelector('input[name="DateFrom"]');
            if (dateFromInput && !dateFromInput.value) {
                const thirtyDaysAgo = new Date();
                thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
                dateFromInput.value = thirtyDaysAgo.toISOString().split('T')[0];
            }
        });
    </script>
}