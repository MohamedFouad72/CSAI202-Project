@page
@model StoreInventoryApp.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .form-card {
            background: white;
            border-radius: 15px;
            padding: 2.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .section-title i {
            color: #667eea;
            margin-right: 0.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .required::after {
            content: " *";
            color: #ef4444;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 2px solid #e5e7eb;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .form-control:disabled, .form-select:disabled {
            background-color: #f3f4f6;
            cursor: not-allowed;
        }

        .btn-save {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            color: white;
            padding: 1rem 3rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

        .btn-cancel {
            background: #6b7280;
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 10px;
            font-weight: 600;
        }

        .info-box {
            background: #fef3c7;
            border-left: 4px solid #f59e0b;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .employee-section {
            background: #f9fafb;
            padding: 1.5rem;
            border-radius: 10px;
            margin-top: 1rem;
        }

        .status-toggle {
            background: #f3f4f6;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="container py-4" style="max-width: 900px;">
        <!-- Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-2"><i class="bi bi-pencil-square me-2"></i>Edit User</h1>
                    <p class="mb-0 opacity-75">Update user information and permissions</p>
                </div>
                <a asp-page="./Index" class="btn btn-light">
                    <i class="bi bi-arrow-left me-2"></i>Back to Users
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <strong>Success!</strong> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error!</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Form -->
        <form method="post">
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="EmployeeID" />

            <div class="form-card">
                <!-- Account Information -->
                <h2 class="section-title">
                    <i class="bi bi-person-circle"></i>Account Information
                </h2>

                <div class="info-box">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Note:</strong> Username cannot be changed. Leave password blank to keep current password.
                </div>

                <!-- Status Toggle -->
                <div class="status-toggle">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="IsActive" 
                               asp-for="IsActive" style="width: 3rem; height: 1.5rem;">
                        <label class="form-check-label fw-bold" for="IsActive">
                            Account Status: <span id="statusText">@(Model.IsActive ? "Active" : "Inactive")</span>
                        </label>
                    </div>
                    <small class="text-muted">Inactive users cannot login to the system</small>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="UserName" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" class="form-control" id="UserName" 
                                   value="@Model.UserName" disabled>
                        </div>
                        <small class="text-muted">Username cannot be changed</small>
                    </div>

                    <div class="col-md-6">
                        <label for="UserRole" class="form-label required">User Role</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield-check"></i></span>
                            <select class="form-select" id="UserRole" name="UserRole" 
                                    asp-for="UserRole" required onchange="toggleEmployeeSection()">
                                <option value="">-- Select Role --</option>
                                @if (Model.CurrentUserRole == "Admin")
                                {
                                    <option value="Admin">Admin (System-wide)</option>
                                }
                                <option value="Manager">Manager (Store Manager)</option>
                                <option value="Cashier">Cashier</option>
                                <option value="Stock">Stock Clerk</option>
                                <option value="Staff">Staff</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="Password" class="form-label">New Password (Optional)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="Password" 
                                   name="Password" asp-for="Password" minlength="8"
                                   placeholder="Leave blank to keep current">
                            <button class="btn btn-outline-secondary" type="button" 
                                    onclick="togglePassword('Password')">
                                <i class="bi bi-eye" id="Password-icon"></i>
                            </button>
                        </div>
                        <small class="text-muted">Minimum 8 characters if changing</small>
                    </div>

                    <div class="col-md-6">
                        <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" class="form-control" id="ConfirmPassword" 
                                   name="ConfirmPassword" asp-for="ConfirmPassword"
                                   placeholder="Confirm new password">
                            <button class="btn btn-outline-secondary" type="button" 
                                    onclick="togglePassword('ConfirmPassword')">
                                <i class="bi bi-eye" id="ConfirmPassword-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="form-card">
                <h2 class="section-title">
                    <i class="bi bi-envelope"></i>Contact Information
                </h2>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="UserEmail" class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="UserEmail" 
                                   name="UserEmail" asp-for="UserEmail" 
                                   placeholder="user@example.com">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="UserPhone" class="form-label">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input type="tel" class="form-control" id="UserPhone" 
                                   name="UserPhone" asp-for="UserPhone" 
                                   placeholder="+20-010-XXXX-XXXX">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="SSN" class="form-label">SSN / ID Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                            <input type="text" class="form-control" id="SSN" 
                                   name="SSN" asp-for="SSN" 
                                   placeholder="National ID or SSN">
                        </div>
                    </div>

                    <div class="col-md-6" id="store-select-container">
                        <label for="StoreID" class="form-label required">Assigned Store</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shop"></i></span>
                            <select class="form-select" id="StoreID" name="StoreID" asp-for="StoreID">
                                <option value="">-- Select Store --</option>
                                @if (Model.Stores != null)
                                {
                                    @foreach (var store in Model.Stores)
                                    {
                                        <option value="@store.StoreID" selected="@(Model.StoreID == store.StoreID)">
                                            @store.StoreName (@store.StoreType)
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employee Details (Conditional) -->
            <div class="form-card employee-section" id="employee-section" 
                 style="display: @(Model.IsEmployee || Model.UserRole != "Admin" ? "block" : "none");">
                <h2 class="section-title">
                    <i class="bi bi-briefcase"></i>Employee Details
                </h2>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="Position" class="form-label">Position/Job Title</label>
                        <input type="text" class="form-control" id="Position" 
                               name="Position" asp-for="Position" 
                               placeholder="e.g., Store Manager, Cashier">
                    </div>

                    <div class="col-md-6">
                        <label for="EmploymentType" class="form-label">Employment Type</label>
                        <select class="form-select" id="EmploymentType" 
                                name="EmploymentType" asp-for="EmploymentType">
                            <option value="">-- Select Type --</option>
                            <option value="Full-time">Full-time</option>
                            <option value="Part-time">Part-time</option>
                            <option value="Contract">Contract</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="Shift" class="form-label">Work Shift</label>
                        <select class="form-select" id="Shift" name="Shift" asp-for="Shift">
                            <option value="">-- Select Shift --</option>
                            <option value="Morning">Morning (8 AM - 4 PM)</option>
                            <option value="Evening">Evening (4 PM - 12 AM)</option>
                            <option value="Night">Night (12 AM - 8 AM)</option>
                            <option value="Flexible">Flexible</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="HireDate" class="form-label">Hire Date</label>
                        <input type="date" class="form-control" id="HireDate" 
                               name="HireDate" asp-for="HireDate">
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" 
                                   id="CanProcessReturns" name="CanProcessReturns" 
                                   asp-for="CanProcessReturns">
                            <label class="form-check-label" for="CanProcessReturns">
                                <strong>Can Process Returns</strong>
                                <small class="text-muted d-block">Allow this employee to process customer returns and refunds</small>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="./Index" class="btn btn-cancel">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-save">
                    <i class="bi bi-check-circle-fill me-2"></i>Save Changes
                </button>
            </div>
        </form>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + '-icon');
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Toggle employee section based on role
        function toggleEmployeeSection() {
            const role = document.getElementById('UserRole').value;
            const employeeSection = document.getElementById('employee-section');
            const storeSelect = document.getElementById('store-select-container');
            const storeField = document.getElementById('StoreID');
            
            if (role === 'Admin') {
                employeeSection.style.display = 'none';
                storeSelect.style.display = 'none';
                storeField.removeAttribute('required');
            } else if (role && role !== '') {
                employeeSection.style.display = 'block';
                storeSelect.style.display = 'block';
                storeField.setAttribute('required', 'required');
            } else {
                employeeSection.style.display = 'none';
                storeSelect.style.display = 'block';
            }
        }

        // Update status text when toggle changes
        document.getElementById('IsActive').addEventListener('change', function() {
            document.getElementById('statusText').textContent = this.checked ? 'Active' : 'Inactive';
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleEmployeeSection();
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>