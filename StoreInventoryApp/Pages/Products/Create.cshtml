@page
@model StoreInventoryApp.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Product</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Product Name <span class="text-danger">*</span></label>
                        <input type="text" asp-for="ProductName" class="form-control" required />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Barcode</label>
                        <input type="text" asp-for="Barcode" class="form-control"
                               placeholder="Leave empty for auto-generate" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                        <small class="text-muted">Leave empty to auto-generate</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Category <span class="text-danger">*</span></label>
                        <select asp-for="CategoryID" class="form-select" required>
                            <option value="">-- Select Category --</option>
                            @foreach (System.Data.DataRow row in Model.Categories.Rows)
                            {
                                <option value="@row["CategoryID"]">@row["CategoryName"]</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Manufacturer</label>
                        <input type="text" asp-for="Manufacturer" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Unit Cost <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">EGP</span>
                            <input type="number" asp-for="UnitCost" class="form-control"
                                   step="0.01" min="0" required />
                        </div>
                        <span asp-validation-for="UnitCost" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Unit Price <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">EGP</span>
                            <input type="number" asp-for="UnitPrice" class="form-control"
                                   step="0.01" min="0" required />
                        </div>
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Reorder Level <span class="text-danger">*</span></label>
                        <input type="number" asp-for="ReorderLevel" class="form-control"
                               min="0" value="10" required />
                        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Product
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}