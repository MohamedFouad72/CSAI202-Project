@page
@model StoreInventoryApp.Pages.Products.DeletedModel
@using System.Data
@{
    ViewData["Title"] = "Deleted Products";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Deleted Products</h1>
    <a asp-page="./Index" class="btn btn-secondary">Back to Products</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Category</th>
                        <th>Barcode</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DeletedProducts != null && Model.DeletedProducts.Rows.Count > 0)
                    {
                        @foreach (DataRow row in Model.DeletedProducts.Rows)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@row["ProductName"]</td>
                                <td><span class="badge bg-secondary">@row["CategoryName"]</span></td>
                                <td class="text-muted">@row["Barcode"]</td>
                                <td class="fw-bold text-success">@Convert.ToDecimal(row["UnitPrice"]).ToString("C")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-success btn-undelete" data-id="@row["ProductID"]">
                                        <i class="bi bi-arrow-counterclockwise"></i> Undelete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No deleted products found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.btn-undelete').forEach(btn => {
            btn.addEventListener('click', function () {
                const productId = this.dataset.id;

                Swal.fire({
                    title: 'Restore product?',
                    text: "This product will be restored to active products.",
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, restore it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        const form = document.createElement('form');
                        form.method = 'post';
                        form.action = window.location.pathname + `?handler=Undelete&ProductID=${productId}`;

                        if (tokenInput) {
                            const tokenField = document.createElement('input');
                            tokenField.type = 'hidden';
                            tokenField.name = '__RequestVerificationToken';
                            tokenField.value = tokenInput.value;
                            form.appendChild(tokenField);
                        }

                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });
    </script>
}

