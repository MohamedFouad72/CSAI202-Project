@page
@model StoreInventoryApp.Pages.Sales.CreateModel
@using System.Data
@{
    ViewData["Title"] = "New Sale (POS)";
}

<form method="post" id="posForm">
    <div class="row h-100">
        <div class="col-md-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchBox" class="form-control border-start-0 ps-0" placeholder="Scan barcode or search product..." onkeyup="filterProducts()">
                    </div>
                </div>
                <div class="card-body bg-light overflow-auto" style="max-height: 600px;">
                    <div class="row g-3" id="productList">
                        @foreach (DataRow row in Model.ProductsList.Rows)
                        {
                            <div class="col-md-4 col-sm-6 product-item">
                                <div class="card border-0 shadow-sm h-100 product-card cursor-pointer">
                                    <div class="card-body text-center p-3">
                                        <div class="bg-light rounded p-3 mb-2 mx-auto" style="width: 50px; height: 50px;">
                                            <i class="bi bi-box-seam text-secondary fs-4"></i>
                                        </div>
                                        <h6 class="card-title text-truncate mb-1 product-name">@row["ProductName"]</h6>
                                        <div class="text-primary fw-bold">
                                            @Convert.ToDecimal(row["UnitPrice"]).ToString("C")
                                        </div>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-primary w-100 mt-2"
                                                onclick="addToCart(@row["ProductID"], '@row["ProductName"]', @row["UnitPrice"])">
                                            Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow h-100 d-flex flex-column">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-cart3 me-2"></i>Current Sale</h5>
                </div>

                <div class="card-body p-3 flex-grow-0">
                    <label class="small text-muted mb-1">Customer</label>
                    <select class="form-select mb-2" asp-for="CustomerID">
                        <option value="">Walk-in Customer</option>
                        @foreach (DataRow row in Model.CustomersList.Rows)
                        {
                            <option value="@row["CustomerID"]">@row["FullName"]</option>
                        }
                    </select>

                    <label class="small text-muted mb-1">Payment Method</label>
                    <select class="form-select" asp-for="PaymentMethod" required>
                        <option value="Cash">Cash</option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="Mobile Wallet">Mobile Wallet</option>
                    </select>
                </div>

                <div class="card-body bg-light flex-grow-1 overflow-auto p-0">
                    <table class="table table-striped mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Item</th>
                                <th style="width: 70px;">Qty</th>
                                <th class="text-end">Total</th>
                                <th style="width: 30px;"></th>
                            </tr>
                        </thead>
                        <tbody id="cartTableBody">
                        </tbody>
                    </table>
                    <div id="emptyCartMsg" class="text-center text-muted mt-5">
                        <i class="bi bi-cart-x fs-1 opacity-50"></i>
                        <p class="mt-2">Cart is empty</p>
                    </div>
                </div>

                <div id="formInputs"></div>

                <div class="card-footer bg-white border-top shadow-sm p-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold" id="subtotalDisplay">0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Tax (14%)</span>
                        <span class="fw-bold" id="taxDisplay">0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fs-4 fw-bold">Total</span>
                        <span class="fs-4 fw-bold text-primary" id="totalDisplay">0.00</span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg py-3 fw-bold" id="btnSubmit" disabled>
                            <i class="bi bi-check-circle-fill me-2"></i> COMPLETE PAYMENT
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Cart Array to store items
        let cart = [];

        // Function to add item to cart
        function addToCart(id, name, price) {
            // Check if item already exists
            let existingItem = cart.find(x => x.id === id);

            if (existingItem) {
                existingItem.qty++;
            } else {
                cart.push({ id: id, name: name, price: parseFloat(price), qty: 1 });
            }

            renderCart();
        }

        // Function to remove item
        function removeFromCart(index) {
            cart.splice(index, 1);
            renderCart();
        }

        // Function to update quantity
        function updateQty(index, newQty) {
            if (newQty < 1) return;
            cart[index].qty = parseInt(newQty);
            renderCart();
        }

        // Main function to render the UI and generate Hidden Inputs
        function renderCart() {
            const tbody = document.getElementById('cartTableBody');
            const inputsDiv = document.getElementById('formInputs');
            const emptyMsg = document.getElementById('emptyCartMsg');
            const btnSubmit = document.getElementById('btnSubmit');

            tbody.innerHTML = '';
            inputsDiv.innerHTML = '';

            let subtotal = 0;

            if (cart.length === 0) {
                emptyMsg.style.display = 'block';
                btnSubmit.disabled = true;
            } else {
                emptyMsg.style.display = 'none';
                btnSubmit.disabled = false;

                cart.forEach((item, index) => {
                    let itemTotal = item.price * item.qty;
                    subtotal += itemTotal;

                    // 1. Draw Table Row
                    let row = `
                        <tr>
                            <td class="align-middle">
                                <div class="fw-bold">${item.name}</div>
                                <small class="text-muted">${item.price.toFixed(2)}</small>
                            </td>
                            <td class="align-middle">
                                <input type="number" class="form-control form-control-sm"
                                       value="${item.qty}" min="1"
                                       onchange="updateQty(${index}, this.value)">
                            </td>
                            <td class="align-middle text-end fw-bold">${itemTotal.toFixed(2)}</td>
                            <td class="align-middle">
                                <i class="bi bi-x-circle text-danger cursor-pointer" onclick="removeFromCart(${index})"></i>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;

                    // 2. Generate Hidden Inputs for ASP.NET Model Binder
                    // This maps to List<CartItem> CartItems in the C# model
                    inputsDiv.innerHTML += `
                        <input type="hidden" name="CartItems[${index}].ProductID" value="${item.id}" />
                        <input type="hidden" name="CartItems[${index}].Quantity" value="${item.qty}" />
                        <input type="hidden" name="CartItems[${index}].UnitPrice" value="${item.price}" />
                    `;
                });
            }

            // Calculate Totals
            let tax = subtotal * 0.14;
            let total = subtotal + tax;

            document.getElementById('subtotalDisplay').innerText = subtotal.toFixed(2);
            document.getElementById('taxDisplay').innerText = tax.toFixed(2);
            document.getElementById('totalDisplay').innerText = total.toFixed(2);
        }

        // Simple Client-side Search
        function filterProducts() {
            let input = document.getElementById('searchBox').value.toLowerCase();
            let items = document.getElementsByClassName('product-item');

            for (let i = 0; i < items.length; i++) {
                let name = items[i].getElementsByClassName('product-name')[0].innerText.toLowerCase();
                if (name.includes(input)) {
                    items[i].style.display = "";
                } else {
                    items[i].style.display = "none";
                }
            }
        }
    </script>
}