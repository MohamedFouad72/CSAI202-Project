@page
@model StoreInventoryApp.Pages.Sales.CreateModel
@using System.Data
@{
    ViewData["Title"] = "New Sale (POS)";
}

<div class="row h-100">
    <div class="col-md-7">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Scan barcode or search product...">
                </div>
                <div class="mt-2 d-flex gap-2">
                    <button class="btn btn-sm btn-primary rounded-pill px-3">All</button>
                    <button class="btn btn-sm btn-light border rounded-pill px-3">Medicines</button>
                    <button class="btn btn-sm btn-light border rounded-pill px-3">Snacks</button>
                    <button class="btn btn-sm btn-light border rounded-pill px-3">Drinks</button>
                </div>
            </div>
            <div class="card-body bg-light overflow-auto" style="max-height: 600px;">
                <div class="row g-3">
                    @foreach (DataRow row in Model.ProductsList.Rows)
                    {
                        <div class="col-md-4 col-sm-6">
                            <div class="card border-0 shadow-sm h-100 product-card cursor-pointer">
                                <div class="card-body text-center p-3">
                                    <div class="bg-light rounded p-3 mb-2 mx-auto" style="width: 50px; height: 50px;">
                                        <i class="bi bi-box-seam text-secondary fs-4"></i>
                                    </div>
                                    <h6 class="card-title text-truncate mb-1">@row["ProductName"]</h6>
                                    <div class="text-primary fw-bold">@Convert.ToDecimal(row["UnitPrice"]).ToString("C")</div>
                                    <button class="btn btn-sm btn-outline-primary w-100 mt-2">Add</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card shadow h-100 d-flex flex-column">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="bi bi-cart3 me-2"></i>Current Sale</h5>
            </div>
            <div class="card-body p-3 flex-grow-0">
                <select class="form-select mb-3">
                    <option value="">Walk-in Customer</option>
                    @foreach (DataRow row in Model.CustomersList.Rows)
                    {
                        <option value="@row["CustomerID"]">@row["FullName"]</option>
                    }
                </select>
            </div>

            <div class="card-body bg-light flex-grow-1 overflow-auto p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th>Item</th>
                            <th style="width: 70px;">Qty</th>
                            <th class="text-end">Total</th>
                            <th style="width: 30px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="align-middle">
                                <div>Panadol Extra</div>
                                <small class="text-muted">25.00</small>
                            </td>
                            <td class="align-middle"><input type="number" class="form-control form-control-sm" value="2"></td>
                            <td class="align-middle text-end fw-bold">50.00</td>
                            <td class="align-middle"><i class="bi bi-x-circle text-danger cursor-pointer"></i></td>
                        </tr>
                    </tbody>
                </table>

            </div>

            <div class="card-footer bg-white border-top shadow-sm p-4">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Subtotal</span>
                    <span class="fw-bold">50.00</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Tax (14%)</span>
                    <span class="fw-bold">7.00</span>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span class="fs-4 fw-bold">Total</span>
                    <span class="fs-4 fw-bold text-primary">57.00</span>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-lg py-3 fw-bold">
                        <i class="bi bi-check-circle-fill me-2"></i> COMPLETE PAYMENT
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>