@page
@model StoreInventoryApp.Pages.Sales.IndexModel
@using System.Data
@{
    ViewData["Title"] = "Sales History";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold">Sales History</h2>
        <p class="text-muted">View and manage past transactions.</p>
    </div>
    <a asp-page="./Create" class="btn btn-success btn-lg shadow-sm">
        <i class="bi bi-cart-plus me-2"></i> New POS Sale
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Invoice #</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Cashier</th>
                    <th>Total</th>
                    <th>Payment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.InvoicesList.Rows)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-primary">#@row["InvoiceNumber"]</td>
                        <td>@Convert.ToDateTime(row["InvoiceDate"]).ToString("MMM dd, yyyy HH:mm")</td>
                        <td>@row["CustomerName"]</td>
                        <td><small class="text-muted">@row["UserName"]</small></td>
                        <td class="fw-bold text-success">@Convert.ToDecimal(row["TotalAmount"]).ToString("C")</td>
                        <td><span class="badge bg-light text-dark border">@row["PaymentMethod"]</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-primary">
                                <i class="bi bi-receipt"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>